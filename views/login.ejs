<%-include('../partials/header')%>
<%if(error.length!=0){%>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%=error%>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<%}%>

    <div class="container d-flex justify-content-center align-items-center">
      
        <div class="card" style="width: 25rem;">
            <img src="https://thumbs.dreamstime.com/b/user-profile-icon-creative-trendy-colorful-round-button-illustration-isolated-156511788.jpg" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title text-center">Login</h5>
              <form action="/login" method="post" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="exampleInputUser1" class="form-label">Username</label>
                    <input type="text" class="form-control" id="exampleInputUser1" name="username" required>
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Password</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block text-center w-100">Login</button>
              </form>
              <a href="/home" class="btn btn-danger mt-1 p-2 btn-block text-center w-100">Go Back</a>
            </div>
        </div>
    </div>

<%-include('../partials/footer')%>
