<%-include('../partials/header')%>
    <%if(success.length!=0){%>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%=success%>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <%}else if(error.length!=0){%>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%=error%>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <%}%>
    <div class="container">
        <h1 class="text-center">Existing Players</h1>
        <br>
        <%if(players.length){%>
            <%for(let player of players){%>
                <div class="card mb-3 " style="max-width: 540px; height: auto;">
                    <div class="row g-0">
                    <div class="col-md-4">
                        <img src="<%=player.imgSrc%>" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title text-center"><%=player.name%></h5>
                            <br>
                            <br>
                            <form action="/players/<%=player._id%>" class="d-flex justify-content-center">
                                <button class="btn btn-lg btn-info">Details</button>
                            </form>
                        </div>
                    </div>
                    </div>
                </div>
            <%}%>
        <%}%>
    </div>
<%-include('../partials/footer')%>